
windowManager:
    loginWindow:
    signupWindow:
    logDataWindow:
    mainProfileWindow:
    workoutWindow:
    statsWindow:
    newWorkout:
    planWindow:


<loginWindow>:
    user : user
    pwd : pwd
    background_color : 243, 168, 24, 1
    FloatLayout:
        canvas.before:
            Color:
                rgba: .95, .63, .09, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size: root.width, root.height
        Label:
            text : "GoTrain"
            size_hint : 0.3, 0.15
            pos_hint : {"x":0.375, "top":1.0}
        Label:
            text : "Username: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.825}
        TextInput:
            id : user
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.425, "top" : 0.8}
        Label:
            text : "Password: "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.725}
        TextInput:
            id : pwd
            multiline :False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.425, "top" : 0.7}
        Button:
            text : "Login"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.38, "top" : 0.5}
            on_release:
                root.validate()
                root.manager.transition.direction = "up"
        Button:
            text : "Create an account"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.33, "top" : 0.35}
            on_release:
                app.root.current = 'signup'
                root.manager.transition.direction = "left"


<signupWindow>:
    name1 : name1
    name2 : name2
    user : user
    pwd : pwd
    background_color : 243, 168, 24, 1
    FloatLayout:
        canvas.before:
            Color:
                rgba: .95, .63, .09, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size: root.width, root.height
        Label:
            text : "First Name: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.825}
        TextInput:
            id : name1
            multiline : False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.8}
        Label:
            text : "Last Name: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.25, "top":0.725}
        TextInput:
            id : name2
            multiline : False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.7}
        Label:
            text : "Username: "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.625}
        TextInput:
            id : user
            multiline : False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.6}
        Label:
            text : "Password: "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.25, "top" : 0.525}
        TextInput:
            id : pwd
            multiline : False
            size_hint : 0.3, 0.05
            pos_hint : {"x" : 0.45, "top" : 0.5}
        Button:
            text : "SUBMIT"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.39, "top" : 0.28}
            on_press :
                root.signupbtn()
                root.manager.transition.direction = "right"

<logDataWindow>:
    info : info
    FloatLayout:
        Label:
            id : info
            size_hint : 0.8, 0.2
            pos_hint : {"x" : 0.15, "top" : 0.8}
            text : "SUCCESSFULLY LOGGED IN"
        Button:
            text : "Login"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.33, "top" : 0.55}
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = "down"
        Button:
            text : "Create new account"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.33, "top" : 0.4}
            on_release:
                app.root.current = 'signup'
                root.manager.transition.direction = "down"


<P>:
    Label:
        text : "Please enter valid information"
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.3, "top" : 0.8}

<mainProfileWindow>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: .95, .63, .09, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size: root.width, root.height
        Label:
            text : "Welcome!"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.33, "top" : 1}
        Button:
            text : "Current Workout"
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.05, "top":0.625}
            on_release:
                app.root.current = 'workout'
                root.manager.transition.direction = "down"
        Button:
            text : "Stats"
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.4, "top" : 0.625}
            on_release:
                root.stat()
                root.manager.transition.direction = "down"
        Button:
            text : "Log Out"
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.725, "top" : 0.625}
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = "down"

<workoutWindow>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: .95, .63, .09, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size: root.width, root.height
        Button:
            text : "Create Workout"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.175, "top" : 0.5}
            on_release:
                app.root.current = 'newwo'
                root.manager.transition.direction = "down"
        Button:
            text : "Lets Work Out"
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.55, "top" : 0.5}
            on_release:
                root.planday()
                root.manager.transition.direction = "down"
        Button:
            text : "GoTrain"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.0, "top" : 1.0}
            on_release:
                app.root.current = 'mainprofile'
                root.manager.transition.direction = "down"


<statsWindow>:
    on_pre_enter: root.stats()
    FloatLayout:
        canvas.before:
            Color:
                rgba: .95, .63, .09, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size: root.width, root.height
        Button:
            text : "GoTrain"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.0, "top" : 1}
            on_release:
                app.root.current = 'mainprofile'
                root.manager.transition.direction = "down"



<newWorkout>:
    length : length
    freq : freq
    sport : sport
    FloatLayout:
        canvas.before:
            Color:
                rgba: .95, .63, .09, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text : "1. Snowboarding  2. Rock Climbing  3. Dancing"
            size_hint : 0.75, 0.325
            pos_hint : {"x":0.13, "top":0.7}
        Label:
            text : "Please enter weeks for training: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.2, "top":0.94}
        TextInput:
            id : length
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.5, "top" : 0.94}
        Label:
            text : "Please choose up to 5 days a week: "
            size_hint : 0.2, 0.1
            pos_hint : {"x":0.2, "top":0.82}
        TextInput:
            id : freq
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.5, "top" : 0.82}
        Label:
            text : "Please choose from the sports below: "
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.2, "top" : 0.7}
        TextInput:
            id : sport
            multiline : False
            size_hint : 0.3, 0.1
            pos_hint : {"x" : 0.5, "top" : 0.7}
        Button:
            text : "Create Workout"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.3, "top" : 0.5}
            on_release:
                root.buildwo()
                root.manager.transition.direction = "down"

<planWindow>:

    FloatLayout:
        canvas.before:
            Color:
                rgba: .95, .63, .09, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text : "Start"
            size_hint : 0.25, 0.1
            pos_hint : {"x" : 0.175, "top" : 0.25}
            on_release:
                root.plan()
        Button:
            text : "Done"
            size_hint : 0.25, 0.1
            pos_hint : {"x" : 0.55, "top" : 0.25}
            on_release:
                root.comp()
        Button:
            text : "Back"
            size_hint : 0.4, 0.1
            pos_hint : {"x" : 0.0, "top" : 1}
            on_release:
                app.root.current = 'workout'
                root.manager.transition.direction = "down"